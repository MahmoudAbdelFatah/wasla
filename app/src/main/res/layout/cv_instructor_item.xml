<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/card_view"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/selector_row">

        <ImageView
            android:id="@+id/iv_instructor_photo"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:background="@drawable/profile_image"
            android:contentDescription="@string/instructor_photo"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:weightSum="30"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_instructor_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="A falsis, valebat velox nuptia."
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textSize"
                android:paddingTop="8dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_instructor_email"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:textColor="@color/colorPrimaryDark"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:text="Sunt homoes locus germanus, gratis messores."
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="20sp"
                android:paddingTop="5dp" />

            <ImageView
                android:id="@+id/iv_share_email"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="end"
                android:contentDescription="@string/share_image"
                android:src="@drawable/share_icon" />


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
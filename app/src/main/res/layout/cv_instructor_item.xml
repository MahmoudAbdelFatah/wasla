<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"

    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_instructor_photo"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:background="@drawable/profile_image"
            android:contentDescription="@string/instructor_photo"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_instructor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_instructor_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:lines="1"
                android:maxLength="20"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:gravity="end">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="end"
                    android:contentDescription="@string/share_image"
                    android:src="@android:drawable/ic_menu_share" />

                <ImageView
                    android:id="@+id/iv_send_email"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="end"
                    android:contentDescription="@string/share_image"
                    android:src="@android:drawable/ic_menu_send" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>